@import url(http://fonts.googleapis.com/css?family=Roboto:400,500,700);
@import url(http://fonts.googleapis.com/css?family=Rajdhani:400,500,600,700);

$main-color = #337AB7;

html,body
	height 100%
	box-sizing border-box
	padding 0 1%
	background #E3E3E4 none no-repeat top right
	
logoBar(top = 31px) {
	width 45px
	height 14px
	background-color #fff
	position absolute
	top top
	left 3%
}

.cp-banner
	background $main-color none no-repeat top right
	box-shadow 0px 1px 10px black
	margin-bottom 0.2%
	height 100px
	position relative
	z-index 999
	.logo
		margin-left 3%
		.name
			font bold 1.3em/1.2 'Rajdhani', sans-serif
			color white
			padding-top: 0.8%
		.capco-horizontal-bar
			logoBar()
		.capco-horizontal-bar-bottom
			logoBar(75px)
		.capco-vertical-bar
			width 14px
			height 54px
			background-color #fff
			position absolute
			top 31px

.cp-container
	background rgba(245, 245, 245, 0.93) none no-repeat top right
	height 85%
	padding 1% 0
	.cp-nav
		font bold 1em 'Rajdhani', sans-serif
		float left
		margin-left 1%
		.panel-heading
			text-align center
	.cp-nav-left
		width 15%
	.cp-nav-right
		width 82%
		margin-right 1%
		height 100%
		height 100%
		overflow auto
		table
			font 1em 'Rajdhani', sans-serif